<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ve.com.mariomendoza.waifupaper.main.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/listToDetailFragment"
            app:destination="@id/detailFragment"/>
        <argument
            android:name="log"
            app:argType="string"
            android:defaultValue='' />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ve.com.mariomendoza.waifupaper.main.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites">
        <action
            android:id="@+id/listToDetailFragment"
            app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="ve.com.mariomendoza.waifupaper.main.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="ve.com.mariomendoza.waifupaper.main.ui.details.ImageDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_image_details">
        <argument
            android:name="modelArgs"
            app:argType="ve.com.mariomendoza.waifupaper.models.Post"/>
        <action
            android:id="@+id/action_detailFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true">
            <argument
                android:name="log"
                app:argType="string" />
        </action>
    </fragment>

</navigation>